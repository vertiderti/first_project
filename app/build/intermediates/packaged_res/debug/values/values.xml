    <style name="OverlayButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/overlay_button_background</item>
        <item name="android:textColor">@color/overlay_button_text</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="OverlayPopup" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/overlay_background</item>
        <item name="android:textColor">@color/overlay_text</item>
        <item name="android:background">@drawable/overlay_background</item>
    </style>
    <style name="OverlayProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/progress_bar_primary</item>
        <item name="android:progressBackgroundTint">@color/overlay_text_secondary</item>
        <item name="android:indeterminateTint">@color/progress_bar_primary</item>
    </style>
    <style name="OverlayTextPrimary" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/overlay_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="OverlayTextSecondary" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/overlay_text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="OverlayTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowSoftInputMode">adjustNothing</item>
    </style>
