<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <!-- Overlay Theme -->
    <style name="OverlayTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowSoftInputMode">adjustNothing</item>
    </style>
    
    <!-- Transparent Activity Theme -->
    <style name="TransparentActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowSoftInputMode">adjustNothing</item>
    </style>
    
    <!-- Overlay Popup Style -->
    <style name="OverlayPopup" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/overlay_background</item>
        <item name="android:textColor">@color/overlay_text</item>
        <item name="android:background">@drawable/overlay_background</item>
    </style>
    
    <!-- Button Styles -->
    <style name="OverlayButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/overlay_button_background</item>
        <item name="android:textColor">@color/overlay_button_text</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Text Styles -->
    <style name="OverlayTextPrimary" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/overlay_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="OverlayTextSecondary" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/overlay_text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Progress Bar Style -->
    <style name="OverlayProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/progress_bar_primary</item>
        <item name="android:progressBackgroundTint">@color/overlay_text_secondary</item>
        <item name="android:indeterminateTint">@color/progress_bar_primary</item>
    </style>
    
    <!-- Dark Theme Overlay -->
    <style name="OverlayTheme.Dark" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/dark_overlay_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowSoftInputMode">adjustNothing</item>
    </style>
    
    <!-- Dialog Styles -->
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:background">@color/dialog_background</item>
    </style>
    
    <!-- Toast Style -->
    <style name="ToastStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/toast_background</item>
        <item name="android:textColor">@color/toast_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- Status Bar Style -->
    <style name="StatusBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">@color/status_bar_background</item>
    </style>
</resources>
